@model CartVM
<div class="page-top-info">
    <div class="container">
        <h4>Your cart</h4>
        <div class="site-pagination">
            <a href="">Home</a> /
            <a href="">Your cart</a>
        </div>
    </div>
</div>
<!-- Page info end -->
<!-- cart section end -->
<section class="cart-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table">
                    <h3>Alışveriş Sepetim</h3>
                    <div class="cart-table-warp">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-th">Ürün</th>
                                    <th class="quy-th">Miktar</th>
                                    <th class="total-th">Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Cart cart in Model.Carts)
                                {
                                    <tr>
                                        <td class="product-col">
                                            <img src="@cart.ProductPicture" alt="@cart.ProductName">
                                            <div class="pc-title">
                                                <h4>@cart.ProductName</h4>
                                                <p>@cart.ProductPrice ₺</p>
                                            </div>
                                        </td>
                                        <td class="quy-col">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="text" value="@cart.Quantity">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="total-col"><h4>@(cart.Quantity*cart.ProductPrice) ₺</h4></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="total-cost">
                        <h6>Toplam <span>@Model.Carts.Sum(x=>x.ProductPrice*x.Quantity) ₺</span></h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 card-right">
                <a asp-controller="Cart" asp-action="Checkout" class="site-btn">Alışverişi Tamamla</a>
                <a href="/urunler" class="site-btn sb-dark">Alışverişe Devam Et</a>
            </div>
        </div>
    </div>
</section>
<!-- cart section end -->
<!-- Related product section -->
<section class="related-product-section">
    <div class="container">
        <div class="section-title text-uppercase">
            <h2>Alışverişe Devam Et</h2>
        </div>
        <div class="row">
            @foreach (Product product in Model.Products)
            {
                <div class="col-lg-3 col-sm-6">
                    <partial name="_Product" model="product" />
                </div>
            }
        </div>
    </div>
</section>
<!-- Related product section end -->
